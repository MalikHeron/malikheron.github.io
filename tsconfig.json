{
   "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "lib": [
         "ESNext",
         "DOM",
         "DOM.Iterable"
      ],
      "module": "ESNext",
      "skipLibCheck": true,
      /* Bundler mode */
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noImplicitAny": false,
      "noEmit": true,
      "jsx": "react-jsx",
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "baseUrl": ".",
      "paths": {
         "@assets/*": [
            "src/assets/*"
         ],
         "@components/*": [
            "src/components/*"
         ],
         "@styles/*": [
            "src/styles/*"
         ],
         "@sections/*": [
            "src/sections/*"
         ]
      }
   },
   "include": [
      "src"
   ],
   "references": [
      {
         "path": "./tsconfig.node.json"
      }
   ]
}